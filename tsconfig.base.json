{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@curb/curb": ["packages/curb/src"],
      "@curb/curb-tasks": ["packages/curb-tasks/src"],
      "@curb/curb-cli": ["packages/curb-cli/src"],
      "@curb/curb-ui": ["packages/curb-ui/src"]
    }
  },
  "references": [
    { "path": "packages/curb" },
    { "path": "packages/curb-tasks" },
    { "path": "packages/curb-cli" },
    { "path": "packages/curb-ui" }
  ]
} 